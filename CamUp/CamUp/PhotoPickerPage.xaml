<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CamUp.PhotoPickerPage">
  <ContentPage.Content>
    <StackLayout x:Name="pickerPageLayout" BackgroundColor="#FF0000" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
      <Image x:Name="BackImage" Source="back.png" HorizontalOptions="Start" VerticalOptions="Center" Margin="10"/>
      <ScrollView x:Name="GridLayout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="10, 0, 10, 10">
        <Grid x:Name="ImageGrid" Margin="5" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"/>
      </ScrollView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>